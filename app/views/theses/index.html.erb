<h1>Listing theses</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Year</th>
    <th>Text</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @theses.each do |thesis| %>
  <tr>
    <td><%= thesis.title %></td>
    <td><%= thesis.author %></td>
    <td><%= thesis.year %></td>
    <td><%= thesis.text.empty? ? 'Not indexed yet!' : thesis.text[0..200]  %></td>
    <td><%= link_to 'Show', thesis %></td>
    <td><%= link_to 'Edit', edit_thesis_path(thesis) %></td>
    <td><%= link_to 'Destroy', thesis, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

